algoritmo "Exercicio 1"

var
maioridadePais:inteiro
idadeUsuario:inteiro
inicio

escreval ("Qual a maioridade civil do seu pais/estado?")
leia (maioridadePais)
limpatela
escreval ("Qual a sua idade?")
leia (idadeUsuario)
limpatela

se (idadeUsuario>= maioridadePais) entao
   escreval ("Você é maior de idade")
senao
   escreval ("Você é menor de idade")
fimse
fimalgoritmo


